<section class="<%= pageTitle === 'Products' ? 'products-pagination' : 'ad-pagination' %>">
  <% if(currentPage !== 1 && prevPage !== 1) { %> <a href="?page=1">1</a> <% } %>
  <% if(hasPrevPage) { %>
    <a href="?page=<%=prevPage%>"><%=prevPage %></a>
  <% } %>
  <a class="active-products" href="?page=<%=currentPage%>"><%=currentPage %></a>
  <% if(hasNextPage) { %> <a href="?page=<%=nextPage%>"><%=nextPage %></a>  <% } %>
  <% if(lastPage !== currentPage && lastPage !== nextPage) { %>
    <a href="?page=<%=lastPage%>"><%=lastPage %></a>
  <% } %>
</section>
