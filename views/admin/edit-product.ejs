<%-include('../templates/head.ejs')%>
<body>
  <%-include('../templates/nav.ejs')%>
  <div class="user-info">
    <p class="user-email"><%=user.email%> </p>
  </div>
  <main class="main-main">
    <h1 class="page-title"><%=pageTitle%></h1>
    <form class="product-form" action="/admin/<%= edit === true ? 'edit-product/'+product._id : 'add-product' %>" method="POST">
      <div class="product-form__controls">
        <label class="product-form__title-label" for="title">Title</label>
        <input class="product-form__title-input" type="text" name="title" value="<%= edit === true ? product.title : '' %>" >
      </div>
      <div class="product-form__controls">
        <label class="product-form__image-label" for="image">Image URL</label>
        <input class="product-form__image-input" type="text" name="image" value="<%= edit === true ? product.image : '' %>" />
      </div>
      <div class="product-form__controls">
        <label class="product-form__description-label" for="description">Description</label>
        <textarea class="product-form__description-textarea" type="text" rows="7" name="description" ><%= edit === true ? product.description : '' %></textarea>
      </div>
      <div class="product-form__controls">
        <label class="product-form__price-label" for="price">Price</label>
        <input class="product-form__price-input" type="number" name="price" step=".01" min="0" max="10000" value="<%= edit === true ? product.price : '' %>" />
      </div>
      <div class="product-form__controls">
        <% if(edit === true){ %> <input type=hidden name=_id value="<%=product._id%>"/> <% } %>
        <button class="product-form__btn" type="submit"><%=edit === true ? "update" : "add"%></button>
      </div>
    </form>
  </main>
</body>
